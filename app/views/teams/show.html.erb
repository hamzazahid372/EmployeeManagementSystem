<% require 'date' %>

<div class="container-fluid">

  <div class="row">
    <div class="col-lg-3">
      <div class="form-group">
        <h1> <%= @team.name %> </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <div class="btn-group float-right" >
          
          <% if can? :destroy, @team %>
            <%= button_to 'Delete', team_path(@team), class: 'btn btn-dark',
                method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
          <% end %>

          <% if can? :update, @team %>
          <%= link_to 'Update', edit_team_path(@team.sequence_num), class: 'btn btn-dark' %>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>  

  <div class="row">
    <div class="col-lg-3">
      <div class="form-group">
        <h4>Name</h4>
      </div>
    </div>

    <div class="col-lg-9">
      <div class="form-group">
        <%= @team.name %>
      </div>
    </div>
  </div>  

  <div class="row">
    <div class="col-lg-3">
      <div class="form-group">
        <h4>Description</h4>
      </div>
    </div>

    <div class="col-lg-9">
      <div class="form-group">
        <%= @team.description %>
      </div>
    </div>
  </div>  

  <div class="row">
    <div class="col-lg-3">
      <div class="form-group">
        <h4>Lead</h4>
      </div>
    </div>

    <div class="col-lg-9">
      <div class="form-group">
        <%= @team.lead_id %>
      </div>
    </div>
  </div>  

  <div class="row">
    <div class="col-lg-3">
      <div class="form-group">
        <h4>Created By</h4>
      </div>
    </div>

    <div class="col-lg-9">
      <div class="form-group">
        <%= @team.created_by_id %>
      </div>
    </div>
  </div>  

</div>

