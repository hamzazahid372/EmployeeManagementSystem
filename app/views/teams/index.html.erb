<%= javascript_pack_tag 'team' %>

<% content_for :card_header do %>
    <div class="card-header">
      <h2 class="font-weight-bold float-left">Teams</h2>        
      <% if can? :create, Team %>
        <%= button_to "Create Team", new_team_path, method: 'get', class: "btn btn-dark float-right mt-1" %>
        <% end %>
    </div>
<% end %>

<div class="row">      
  <div class="col-lg-6">
    <div class="form-group">
      <%= form_with url: teams_search_kick_path, remote: true do |f| %>
          <%= f.text_field :search, autofocus: true, class: 'form-control border-info', required: true %>
    </div>
  </div>
  <div class="col-lg-1">
    <div class="form-group">
      <%= f.submit 'Search', class: 'btn btn-dark mr-5 float-right' %>
      <% end %>
    </div>
  </div>
</div>

<div class="table-responsive my-4" id="teams-table-div">
  <%= render partial: "table", locals: { paginate: true, teams: @teams } %>
</div>  
