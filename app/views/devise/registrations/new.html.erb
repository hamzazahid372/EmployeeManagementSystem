<div class="mt-10">
  <div class="container border rounded-lg w-50 shadow p-4 mb-4 bg-white mt-4">
    <h2 class="text-center mb-5">Employee Management System</h2>
    <h2 class="text-center mb-5">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field text-center mb-4 row-cols-1 pr-5 m-4">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, class: 'form-control float-right w-50' %>
      </div>

      <div class="field text-center mb-4 row-cols-1 pr-5 m-4">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autofocus: true, class: 'form-control float-right w-50' %>
      </div>

      <%=f.fields_for :company do |ff| %>
        <div class="field text-center mb-4 row-cols-1 pr-5 m-4">
          <%= ff.label :company_name %>
          <%= ff.text_field :name, autofocus: true, class: 'form-control float-right w-50' %>
        </div>
        <div class="field text-center mb-4 row-cols-1 pr-5 m-4">
          <%= ff.label :company_domain %>
          <%= ff.text_field :subdomain, autofocus: true, class: 'form-control float-right w-50' %>
        </div>
      <% end %>

      <div class="field text-center mb-4 row-cols-1 pr-5 m-4">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control float-right w-50' %>
      </div>

      <div class="field text-center mb-4 row-cols-1 pr-5 m-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control float-right w-50' %>
      </div>

      <div class="field text-center mb-4 row-cols-1 pr-5 m-4">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control float-right w-50' %>
      </div>

      <div class="actions text-center m-2">
        <%= f.submit "Sign up", class: 'btn btn-dark' %>
      </div>

    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
