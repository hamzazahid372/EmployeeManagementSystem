 <br><br>
  <div class="container-fluid">
    <%= label @event.title, class: 'h1 font-weight-bold text-dark' %>
    <table class="table">
      <tbody>
        <tr>
          <th><%= t(:event_title) %></th>
          <td><%= @event.title %></td>
        </tr>
        <tr>
          <th><%= t(:event_description) %></th>
          <td><%= @event.description %></td>
        </tr>
        <tr>
          <th><%= t(:start) %></th>
          <td><%= @event.start&.to_s(:long) %></td>
        </tr>
        <tr>
          <th><%= t(:end) %></th>
          <td><%= @event.end&.to_s(:long) %></td>
        </tr>
      </tbody>
    </table>
    <div class="btn-group" role="group">
      <% if can? :update, @event %>
        <%= link_to 'Update', edit_event_path(@event.sequence_num),class: ' ml-3 btn btn-dark' %>
      <% end %>
      <% if can? :delete, @event %>
        <%= link_to 'Delete', event_path(@event),
          method: :delete,class: 'ml-3 btn btn-dark',
          data: { confirm: 'Are you sure you want to delete?' } %>
      <% end %>
    </div>
  </div>
