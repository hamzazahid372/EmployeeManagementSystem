<%= javascript_pack_tag 'project', 'data-turbolinks-track': 'reload' %>
<div class="container-fluid">
  <h1>Projects</h1>
  <div class="table-responsive">
      <table id="events-datatable" class="table table-hover">
        <thead>
        <tr>
          <th><%= t(:event_title) %></th>
          <th><%= t(:event_description) %></th>
          <th><%= t(:event_date) %></th>
        </tr>
        </thead>
        <tbody>

        <% @events.each do |event| %>
          <tr>
            <td><%= link_to event.title, event_path(event) %> </td>
            <td> <%= event.description %> </td>
            <td><%= Date.parse((event.event_date).to_s) unless event.event_date.nil? %></td>
          </tr>
        <% end %>

        </tbody>
      </table>
  </div>
</div>

