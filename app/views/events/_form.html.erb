<% content_for :card_header do %>
  <% if object.new_record? %>
    <h2 class="card-header font-weight-bold">Create Event</h2>
  <% else %>
    <h2 class="card-header font-weight-bold">Update Event</h2>
  <% end %>
<% end %>

<%= form_for object do |form| %>
  <div class="container-fluid">
    <div class='row'>
      <div class='col-lg-12'>
        <div class='form-group'>
        <%= form.label :title , class: 'h4 font-weight-bold text-dark' %>
        <%= form.text_field :title, class: 'form-control border-dark  w-100', required: true, minlength: 3 %>
      </div>
    </div>
  </div>
    <div class='row'>
      <div class='col-lg-12'>
        <div class='form-group'>
        <%= form.label :description, class: 'h4 font-weight-bold text-dark' %>
        <%= form.text_area :description, class: 'form-control border-dark w-100', rows: 5 %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-lg-12'>
      <div class='form-group'>
        <%= form.label :start_date, class: 'h5 font-weight-bold text-dark' %><br />
        <%= form.datetime_field :start, class: 'form-control border-dark w-100', required: true %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-lg-12'>
      <div class='form-group'>
        <%= form.label :end_date, class: 'h5 font-weight-bold text-dark' %>
        <%= form.datetime_field :end, class: 'form-control border-dark w-100' %>
      </div>
    </div>
  </div>
    <%= form.submit class: 'btn btn-dark float-right' %>
    <% if request.format.html? %>
      <%= link_to 'Back', :back, class: 'btn btn-dark float-right mr-3' %>
    <% end %>
  </div>
<% end %>
