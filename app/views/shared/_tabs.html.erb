<% tabs = get_resource_tabs(resource) %>
<% tabs.each do |tab| %>
  <ul class="nav nav-tabs" id="<%=tab%>" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="<%=tab%>-tab" data-toggle="tab" href="#<%=tab%>-tab-content" role="tab" aria-controls="<%=tab%>-tab-content" aria-selected="true">Comments</a>
    </li>
  </ul>
  <div class="tab-content" id="<%=tab%>-tab-content-div">
    <div class="tab-pane fade show active" id="<%=tab%>-tab-content" role="tabpanel" aria-labelledby="<%=tab%>-tab"></div>
  </div>
<% end %>

