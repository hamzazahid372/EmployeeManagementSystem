<% tabs = get_resource_tabs(resource) %>
<ul class="nav nav-tabs bg-light rounded-bottom" id="tabs" role="tablist">
  <% tabs.each_with_index do |tab, i| %>
  <li class="nav-item" role="presentation">
    <a class="nav-link rounded-bottom p-3 <%= 'active' if i.zero? %>" id="<%=tab%>-tab" data-toggle="tab" href="#<%=tab%>-tab-content" data-resource-id='<%= params[:id] %>' role="tab" aria-controls="<%=tab%>-tab-content" aria-selected="true"><%= tab.humanize %>
    </a>
  </li>
  <% end %>
</ul>
<div class="tab-content" id="tabs-content">
  <% tabs.each_with_index do |tab, i| %>
  <div class="tab-pane fade p-4 show <%= 'active' if i.zero? %>" id="<%= tab %>-tab-content" role="tabpanel" aria-labelledby="<%= tab %>-tab">
    <% if tab == 'tasks' %>
      <div id ="tasks-table-div"></div>
    <% end %>
  </div>
  <% end %>
</div>
