<% content_for :card_header do %>
  <% if dept.new_record? %>
    <h2 class="card-header font-weight-bold">Create Department</h2>
  <% else %>
    <h2 class="card-header font-weight-bold">Update Department</h2>
  <% end %>
<% end %>

<%= form_for dept do |form| %>
  <div class="form-group">
    <div class="col-lg-12">
      <%= form.label :name, class: 'h5 card-title' %>
      <%= form.text_field :name, class: 'form-control border-info', required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= form.label :description, class: 'h5 card-title' %>
      <%= form.text_area :description, class: 'form-control border-info', rows: 5, required: true %>
    </div>
  </div>

  <%= form.submit class: 'btn btn-dark mr-3 float-right' %>
  <%= link_to 'Back', :back, class: 'btn btn-dark mr-3 float-right' %>
<% end %>

