<div class="clearfix"></div>
<h2 class="mt-4">Holidays</h2>
<table id="working_days_table" class="table table-hover">
  <thead>
  <tr>
    <th>Day</th>
    <th>Date</th>
    <th>Every Year</th>
    <% if can? :update, holidays.first %>
      <th>Action</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  
  <% holidays.each do |holiday| %>
    <tr>
      <td><%= holiday.day %> </td>
      <td><%= holiday.every_year %> </td>
      <td><%= working_day_presenter.to %> </td>
      <% if can? :update, holiday %>
        <td><%= link_to 'Edit', edit_holiday_path(holiday), remote: true, class: 'btn btn-dark btn-sm' %> </td>
      <% end %>
    </tr>        
  <% end %>   
  </tbody>
</table>
