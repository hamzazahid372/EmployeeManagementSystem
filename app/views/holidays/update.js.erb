<% if flash.now[:error].blank? %>
  $("#holidays-modal").modal('hide');
  $("#flash_messages").html("<%= j render partial: 'shared/flash' %>");
  $("#holidays").html("<%= j render(partial: 'holidays/holidays', locals: { holidays: @holidays }) %>");
<% else %>
  $("#modal-flash-messages").html("<%= j render partial: 'shared/flash' %>");
<% end %>
