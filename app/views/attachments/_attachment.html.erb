<% binding.pry %>
<%= javascript_pack_tag 'attachment_datatable', 'data-turbolinks-track': 'reload' %>
<div class="container-fluid">
  <div class="table-responsive">
      <table id="attachments-datatable" class="table table-hover">
        <thead>
        <tr>
          <th><%= t(:file_name) %></th>
          <th><%= t(:file_size) %></th>
          <th><%= t(:file_uploaded_on) %></th>
        </tr>
        </thead>
        <tbody>

        <% @attachments.each do |attachment| %>
          <tr>
            <td><%= link_to attachment.attachment_file_name, attachment_path(attachment) %> </td>
            <td> <%= attachment.attachment_file_size %> </td>
            <td><%= Date.parse((attachment.attachment_updated_at).to_s) unless attachment.attachment_updated_at.nil? %></td>
          </tr>
        <% end %>

        </tbody>
      </table>
  </div>
</div>