<% content_for :card_header do %>
  <h2 class="card-header font-weight-bold">Change Password</h2>
<% end %>

<%= form_for @user do |form| %>
  <div class="form-group">
    <div class="col-lg-12">
      <%= form.label :password, class: 'h5 card-title' %>
      <%= form.password_field :password, class: 'form-control border-info', required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= form.label :password_confirmation, class: 'h5 card-title' %>
      <%= form.password_field :password_confirmation, class: 'form-control border-info', required: true %>
    </div>
  </div>
  
  <%= form.submit "Change my password", class: 'float-right btn btn-dark mr-3 mt-3' %>
<% end %>
