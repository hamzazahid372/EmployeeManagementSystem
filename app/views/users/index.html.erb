<%= javascript_pack_tag 'user', 'data-turbolinks-track': 'reload' %>
<div class="container-fluid">
  <h1>Employees</h1>
  <div class="table-responsive">
      <table id="users-datatable" class="table table-hover">
        <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Role Id</th>
          <th>Dept. Id</th>
          <th>Email</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td> <%= link_to user.first_name, user_path(user) %> </td>
            <td> <%= link_to user.last_name, user_path(user) %> </td>
            <td> <%= link_to user.role_id, user_path(user) %> </td>
            <td> <%=link_to user.department_id, user_path(user)%> </td>
            <td> <%= link_to user.email, user_path(user) %> </td>
          </tr>
        <% end %>

        </tbody>
      </table>
  </div>
</div>