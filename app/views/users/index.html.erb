<%= javascript_pack_tag 'user', 'data-turbolinks-track': 'reload' %>
<%= render_breadcrumbs %>
<div class="container-fluid w-100 mt-4 pl-4 pr-4 pb-4">
  <div class="card">
    <div class="card-header">
      <h2 class="font-weight-bold float-left">Users</h2>
      <%= button_to 'Create User', new_user_path, method: 'get', class: "btn btn-dark float-right mt-1" %>
    </div>
    <div class="card-body container-fluid p-5">
      <div class="table-responsive">
        <table id="users-datatable" class="table table-hover">
          <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role Id</th>
            <th>Dept. Id</th>
            <th>Email</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td> <%= link_to user.first_name, user_path(user) %> </td>
              <td> <%= link_to user.last_name, user_path(user) %> </td>
              <td> <%= link_to user.role_id, user_path(user) %> </td>
              <td> <%=link_to user.department_id, user_path(user)%> </td>
              <td> <%= link_to user.email, user_path(user) %> </td>
            </tr>
          <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
