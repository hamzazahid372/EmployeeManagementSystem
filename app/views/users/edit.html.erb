<br><br>
<%= form_for @user do |form| %>
  <div class="container-fluid">
    <div class="d-flex col-lg-12">
      <h1 class="theme-color font-weight-bold">Update User</h1>
    </div>

    <div class="form-group">
      <div class="col-lg-12">
        <%= form.label :first_name, class: 'h4 font-weight-bold text-primary' %>
        <%= form.text_field :first_name, class: 'form-control border-info w-75', required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-12">
      <%= form.label :last_name, class: 'h4 font-weight-bold text-primary' %>
      <%= form.text_field :last_name, class: 'form-control border-info w-75', required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-12">
      <%= form.label :department_id, class: 'h4 font-weight-bold text-primary' %>
      <%= form.text_field :department_id, class: 'form-control border-info w-75', required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-12">
        <%= form.label :role_id, class: 'h5 font-weight-bold text-primary' %>
        <%= form.select :role_id, User::ROLES, {}, {class: "form-control border-info text-danger w-75"} %>
      </div>
    </div>

    <%= form.submit class: 'btn btn-dark float-left', text: 'Update User' %>
  </div>
<% end %>
<%= button_to 'Back', user_path(@user), method: 'get', class: 'btn btn-dark ml-3' %>
