<div class="container-fluid w-75 mt-5 pl-4 pr-4 pb-4">
  <div class="card">
    <% if user.new_record? %>
      <h2 class="card-header font-weight-bold">Create User</h2>
    <% else %>
      <h2 class="card-header font-weight-bold">Update User</h2>
    <% end %>
    <div class="card-body container-fluid p-5">
      <%= form_for user do |form| %>
        <div class="form-group">
          <div class="col-lg-12">
            <%= form.label :first_name, class: 'h5 card-title' %>
            <%= form.text_field :first_name, class: 'form-control border-info', required: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-12">
            <%= form.label :last_name, class: 'h5 card-title' %>
            <%= form.text_field :last_name, class: 'form-control border-info', required: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-12">
            <%= form.label :department_id, class: 'h5 card-title' %>
            <%= form.number_field :department_id, class: 'form-control border-info', required: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-12">
            <%= form.label :role_id, class: 'h5 card-title' %>
            <%= form.select :role_id, User::ROLES, {}, {class: "form-control border-info text-success"} %>
          </div>
        </div>
        <% if user.new_record? %>
          <div class="form-group">
            <div class="col-lg-12">
              <%= form.label :email, class: 'h5 card-title' %>
              <%= form.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control border-info', required: true  %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-12">
              <%= form.label :password, class: 'h5 card-title' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= form.password_field :password, autocomplete: "new-password", class: 'form-control border-info', required: true  %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-12">
              <%= form.label :password_confirmation, class: 'h5 card-title'  %><br/>
              <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control border-info', required: true  %>
            </div>
          </div>
        <% end %>
        <%= form.submit class: 'btn btn-dark float-right p-2 mr-3 mt-3' %>
        <%= link_to 'Back', users_path, method: :get, class: 'btn btn-dark float-right p-2 mr-3 mt-3' %>
      <% end %>
    </div>
  </div>
</div>
