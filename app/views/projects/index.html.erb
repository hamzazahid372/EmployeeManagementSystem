<%= javascript_pack_tag 'project' %>

<div class="container-fluid w-100 mt-4 pl-4 pr-4 pb-4">
  <div class="card">
    <div class="card-header">
      <h2 class="font-weight-bold float-left">Projects</h2>
      <%= button_to 'Create Project', new_project_path, method: 'get', class: "btn btn-dark float-right mt-1" %>
    </div>
    <div class="card-body container-fluid p-5">
      <div class="table-responsive">
        <table id="projects-datatable" class="table table-hover">
          <thead>
            <tr>
              <th><%= t(:project_title) %></th>
              <th><%= t(:project_description) %></th>
              <th><%= t(:project_status) %></th>
              <th><%= t(:project_start_date) %></th>
              <th><%= t(:project_end_date) %></th>
            </tr>
          </thead>

          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to project.name, project_path(project) %> </td>
                <td> <%= project.description %> </td>
                <td> <%= project.status %> </td>
                <td><%= Date.parse((project.start_date).to_s) unless project.start_date.nil? %></td>
                <td><%= Date.parse((project.end_date).to_s) unless project.end_date.nil? %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
