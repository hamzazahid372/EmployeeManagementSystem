<%= javascript_pack_tag 'project' %>

<% content_for :card_header do %>
    <div class="card-header">
      <h2 class="font-weight-bold float-left">Projects</h2>
      <% if can? :create, Project %>
        <%= button_to "Create Projects", new_project_path, method: 'get', class: "btn btn-dark float-right mt-1" %>
      <% end %>
    </div>
<% end %>

<div class="row">      
  <div class="col-lg-6">
    <div class="form-group">
      <%= form_with url: projects_search_kick_path, remote: true do |f| %>
          <%= f.text_field :search, autofocus: true, class: 'form-control border-info', required: true %>
    </div>
  </div>
  <div class="col-lg-1">
    <div class="form-group">
      <%= f.submit 'Search', class: 'btn btn-dark mr-5 float-right' %>
      <% end %>
    </div>
  </div>
</div>

<div class="table-responsive" id="table-parent-div">
  <%= render partial: 'table', locals: { projects: @projects } %>
</div>
