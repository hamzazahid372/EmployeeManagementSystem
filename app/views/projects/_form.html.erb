<div class="container-fluid w-75 mt-5 pl-4 pr-4 pb-4">
  <div class="card">
    <% if object.new_record? %>
      <h2 class="card-header font-weight-bold"><%= t(:project_new) %></h2>
    <% else %>
      <h2 class="card-header font-weight-bold"><%= t(:project_update) %></h2>
    <% end %>
    <div class="card-body container-fluid p-5">
      <%= form_for object do |form| %>
        <div class='col-lg-12'>
          <div class='form-group'>
            <%= form.label :name , class: 'h5 card-title' %>
            <%= form.text_field :name, class: 'form-control border-info  w-100', required: true, minlength: 3 %>
          </div>
        </div>
        <div class='col-lg-12'>
          <div class='form-group'>
            <%= form.label :description, class: 'h5 card-title' %>
            <%= form.text_area :description, class: 'form-control border-info', rows: 5 %>
          </div>
        </div>
        <div class='row pl-3 pr-3'>
          <div class='col-lg-6'>
            <div class='form-group'>
              <%= form.label :start_date, class: 'h5 card-title' %>
              <%= form.date_field :start_date, class: 'form-control border-info' %>
            </div>
          </div>

          <div class='col-lg-6'>
            <div class='form-group'>
              <%= form.label :end_date, class: 'h5 card-title' %>
              <%= form.date_field :end_date, class: 'form-control border-info ' %>
            </div>
          </div>
        </div>
        <div class='row pl-3 pr-3'>
          <div class='col-lg-6'>
            <div class='form-group'>
              <%= form.label :expected_start_date, class: 'h5 card-title' %>
              <%= form.date_field :expected_start_date, class: 'form-control border-info ' %>
            </div>
          </div>

          <div class='col-lg-6'>
            <div class='form-group'>
              <%= form.label :expected_end_date, class: 'h5 card-title' %>
              <%= form.date_field :expected_end_date, class: 'form-control border-info' %>
            </div>
          </div>
        </div>        
        <div class='row pl-3'>
          <div class='col-lg-6'>
            <div class='form-group'>
              <%= form.label :status, class: 'h5 card-title' %>
              <%= form.select :status, Project::STATUS, {}, { class: 'form-control border-info text-dark' } %>
            </div>
          </div>
        </div>
        <%= form.submit class: 'btn btn-dark float-right mr-3' %>
        <%= link_to 'Back', projects_path, class: 'btn btn-dark float-right mr-3' %>
      <% end %>
    </div>
  </div>
</div>


