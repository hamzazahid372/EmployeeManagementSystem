<br><br>
<%= form_for @project do |form| %>
  <div class="container-fluid">
    <div class="d-flex col-lg-12">
      <h1 class="text-dark font-weight-bold">New project</h1>
    </div>

    <div class="form-group">
      <div class="col-lg-12">
        <%= form.label :name, class: 'h4 font-weight-bold text-primary' %>
        <%= form.text_field :name, class: 'form-control border-info w-75', required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-12">
        <%= form.label :description, class: 'h4 font-weight-bold text-primary' %>
        <%= form.text_area :description, class: 'form-control border-info w-75', rows: 5, required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">
        <%= form.label :status, class: 'h5 font-weight-bold text-primary' %>
        <%= form.select :status, Project::STATUS, {}, {class: "form-control border-info text-danger w-75"} %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">
        <%= form.label :created_by, class: 'h5 font-weight-bold text-primary' %>
        <%= form.select :created_by, ['User', 'Team'], {}, {class: "form-control border-info text-danger w-75"} %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :start_date, class: 'h5 font-weight-bold text-primary ml-3' %>
          <%= form.date_field :start_date, class: 'form-control border-info w-50 ml-3', required: true %>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :end_date, class: 'h5 font-weight-bold text-primary' %>
          <%= form.date_field :end_date, class: 'form-control border-info w-50', required: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :expected_start_date, class: 'h5 font-weight-bold text-primary ml-3' %>
          <%= form.date_field :expected_start_date, class: 'form-control border-info w-50 ml-3', required: true %>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="form-group">
          <%= form.label :expected_end_date, class: 'h5 font-weight-bold text-primary' %>
          <%= form.date_field :expected_end_date, class: 'form-control border-info w-50', required: true %>
        </div>
      </div>
    </div>
    <%= form.submit 'Add project', class: 'btn btn-primary ml-3' %>
    <%= form.button 'Cancel', class: 'btn btn-primary ml-3' %>
  </div>
<% end %>