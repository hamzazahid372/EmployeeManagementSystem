<div class="modal-dialog">
  <div class="modal-content">
  
    <!-- Modal Header -->
    <div class="modal-header">
      <h4 class="modal-title">Add Watcher</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    
    <!-- Modal body -->
    <div class="modal-body">
      <div id="modal-flash-messages"></div>
        
        <%= form_for [task,tasks_watcher], remote: true do |form| %>

          <div class="container-fluid">

            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                  <%= form.label :watcher_type %>
                  <%= form.select :watcher_type, options_for_select(['User','Team']), {}, class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                  <%= form.label t(:name) %>
                  <%= form.text_field :watcher_id, class: 'form-control' %>
                </div>
              </div>
            </div>
            <%= form.submit class: 'btn btn-dark' %>

          </div>

        <% end %>
    </div>
    
  </div>
</div>